<Window x:Class="TripleG_Online.StaffPasswordEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TripleG_Online"
        mc:Ignorable="d"
        Title="StaffPasswordEntry" Height="100" Width="200" MaxHeight="100" MinHeight="100" MaxWidth="200" MinWidth="200"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>

        <StackPanel Orientation="Horizontal">
            <TextBox Name="PasswordIns" HorizontalAlignment="Left" FontSize="20" Width="100" Height="50" BorderBrush="Black" BorderThickness="2" Margin="10,0,0,0" TextAlignment="Center"/>
            <Button Name="EnterPasswordBtn" Content="Enter" Height="50" Width="50" BorderBrush="Black" BorderThickness="2" Background="Beige" Margin="10,0,0,0" Click="EnterPasswordBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
